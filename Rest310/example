# Create editor
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/editors" -Method POST -ContentType "application/json" -Body '{"login":"user1","password":"passw0rd!","firstname":"Marina","lastname":"Dorofey"}'

# Create tag
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/tags" -Method POST -ContentType "application/json" -Body '{"name":"tech"}'

# Create story (editorId=1, tagIds=[1])
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/stories" -Method POST -ContentType "application/json" -Body '{"editorId":1,"title":"Hello","content":"World","tagIds":[1]}'

# Create comment (storyId=1)
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/comments" -Method POST -ContentType "application/json" -Body '{"storyId":1,"content":"Nice!"}'

# Get stories
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/stories" -Method GET

# Get editor by story
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/stories/1/editor" -Method GET

# Search stories
Invoke-RestMethod -Uri "http://localhost:24110/api/v1.0/stories/search?tagName=tech&editorLogin=user1&title=Hel" -Method GET
